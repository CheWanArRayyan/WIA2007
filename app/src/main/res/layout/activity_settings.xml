<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/bigheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title=" "
        app:titleCentered="false"
        app:titleMargin="0dp"
        app:titleTextAppearance="@style/bigheader"
        app:titleTextColor="#000000" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.85"
        android:maxLines="2"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <Button
        android:id="@+id/buttonReportDamage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:onClick="goToReportDamage"
        android:paddingStart="30dp"
        android:text="Report Damage"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:icon="@drawable/ic_outline_report_problem_24"
        app:iconPadding="30dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonAppFeedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFC9D3"
        android:paddingStart="30dp"
        android:text="Logout"
        android:textAlignment="textStart"
        android:textColor="#F91F1F"
        android:textSize="16sp"
        app:icon="@drawable/ic_baseline_logout_24"
        app:iconPadding="30dp"
        app:iconSize="24dp"
        app:iconTint="#FF1F1F"
        app:layout_constraintBottom_toTopOf="@+id/TVAppNameDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAppFeedback"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/buttonAppFeedback"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:onClick="goAppFeedback"
        android:paddingStart="30dp"
        android:text="App Feedback"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:icon="@drawable/ic_outline_feedback_24"
        app:iconPadding="30dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReportDamage"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/TVAppNameDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="CopCop 1.0 by Nerd Herd UM"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>